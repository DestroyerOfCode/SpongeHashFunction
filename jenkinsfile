pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Build image') {
            steps {
                echo 'Starting to build docker image'
                    script {
                        def customImage = docker.build("my-image")
                        customImage.push()
                    }
                }
        }
        stage('Run Gradle Test') {
            steps {
                sh './gradlew clean test'
            }
        }
    }

    post {
        always {
            echo 'Pipeline execution complete.'
        }

        success {
            echo 'Pipeline succeeded.'
        }

        failure {
            echo 'Pipeline failed.'
        }


    }
}
